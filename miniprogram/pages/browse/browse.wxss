.header {
  background-color: #22282d;
}

.header-image {
  width: 750rpx;
  height: 8vh;
}

.page__hd {
  height: 80vh;
}

.page__title{
  display: block;
  font-size: 20px;
  color: #ffffff;
  font-family: '微軟正黑體';
}

.info{
  margin-top: 40rpx;
  height: 140rpx;
  width: 80%;
  background: rgb(82, 82, 82);
  border: 5px solid #f1501a;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.info-text{
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #ffffff;
}